public class OopsConcept {
	private integer sample;
	private double sample1;
	public string sampleString;
	private double result;
	
	public OopsConcept()
	{
		system.debug('Question 1 : constructor demo');
		sample = 100;
		sample1 = 10.10;
		sampleString = 'sample';
	}
    
    
    public void calculator(string operation, integer inputOne , integer inputTwo)
	{
		if(operation == 'sum')
		{
			result = inputOne + inputTwo;
		}
		
		if(operation == 'sub')
		{
			result = inputOne - inputTwo;
		}
		
		if(operation == 'mul')
		{
			result = inputOne * inputTwo;
		}
		
		if(operation == 'div')
		{
			result = inputOne / inputTwo;
		}
		system.debug('Question 2 :');
		system.debug(result);
	}


}